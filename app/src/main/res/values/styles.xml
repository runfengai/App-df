<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#000</item>
        <item name="colorControlNormal">@color/login_line</item>
        <item name="colorControlActivated">@color/login_line_press</item>
        <!--过渡动画-->
        <!--<item name="android:windowAnimationStyle">@style/activityAnim</item>-->
    </style>

    <!--<style name="activityAnim">-->
    <!--<item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>-->
    <!--<item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>-->
    <!--<item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>-->
    <!--<item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>-->
    <!--</style>-->
    <!-- name 是Style的名称，parent 继承那个父类样式 -->
    <style name="theme_fullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--SplashActivity-->
    <style name="UserActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--MainActivity-->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <!--Toolbar 样式-->
    <style name="ToolbarStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--TabLayout-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FullWindowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Comment" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
    </style>
</resources>
