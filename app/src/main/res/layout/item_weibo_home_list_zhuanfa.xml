<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_weibo_zhuanfa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_zhuanfa"
    android:layout_marginTop="5dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_weibo_zhuanfa_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        tools:text="UMR80" />

    <TextView
        android:id="@+id/tv_weibo_zhuanfa_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:text="123456sdsasxsaxxasxsaxsawawaswdddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weibo_zhuanfa_reposts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="8sp"
            android:textColor="#3F51B5"
            tools:text="233"/>

        <TextView
            android:id="@+id/tv_weibo_zhuanfa_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="8sp"
            android:textColor="#3F51B5"
            tools:text="233"/>
    </LinearLayout>

    <include layout="@layout/item_weibo_home_list_zhuanfa_img" />

</LinearLayout>